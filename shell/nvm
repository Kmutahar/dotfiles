# Lazyload nvm and related commands including globally installed modules
# based of code from http://broken-by.me/lazy-load-nvm/
# grabbed from GitHub.com/fl0w_io @ https://gist.github.com/fl0w/07ce79bd44788f647deab307c94d6922




lazynvm() {
  unset -f nvm node npm npx yarn ghost gscan speed-test corona git-file-history
  export NVM_DIR="$HOME/.nvm"
  [ -s "/usr/local/opt/nvm/nvm.sh" ] && . "/usr/local/opt/nvm/nvm.sh"  # This loads nvm
}

nvm() {
  lazynvm 
  nvm $@
}
 
node() {
  lazynvm
  node $@
}
 
npm() {
  lazynvm
  npm $@
}

npx() {
  lazynvm
  npx $@
}

yarn() {
  lazynvm
  yarn $@
}

ghost() {
  lazynvm
  ghost $@
}

gscan() {
  lazynvm
  gscan $@
}

speed-test() {
  lazynvm
  speed-test $@
}

corona() {
  lazynvm
  corona $@
}

git-file-history() {
  lazynvm
  git-file-history $@
}
